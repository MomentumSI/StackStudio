<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   close="PopUpManager.removePopUp(this)" 
			   title="Create Snapshot"
			   move="Helpers.doMove(this)"
			   creationComplete="createSnapshot_creationCompleteHandler(event)"
			   width="482" height="208">
	<fx:Script>
		<![CDATA[
			import com.momentumsi.c9.components.MainBox;
			import com.momentumsi.c9.utils.Helpers;
			
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			
			private var mainBox:MainBox;
			
			protected function createSnapshot_creationCompleteHandler(event:FlexEvent):void
			{
				mainBox = Helpers.getMainBox(this);
				PopUpManager.centerPopUp(this);
			}
			
			protected function createButton_clickHandler(event:MouseEvent):void
			{
				var descriptionParam:String;
				if(description.text == null)
				{
					descriptionParam = "";
				}else{
					descriptionParam = description.text;
				}
				createSnapshotSvc.send({id: ebsVolume.child('id'), description: descriptionParam});
				PopUpManager.removePopUp(this);
			}
			
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<fx:XML id="ebsVolume"/>
		
		<s:HTTPService id="createSnapshotSvc"
					   url="{Helpers.getHost()}/ebs_volumes/create_snapshot"
					   method="POST"
					   resultFormat="e4x"
					   showBusyCursor="true"/>
	</fx:Declarations>
	<s:VGroup horizontalCenter="0" height="100%">
		<s:Group width="100%" height="109">
			<s:Form horizontalCenter="0">
				<s:layout>
					<s:FormLayout gap="-7"/>
				</s:layout>
				<s:FormItem label="Volume:">
					<mx:Text text="{ebsVolume.child('ebs-id')}"/>
				</s:FormItem>
				<!--
				<s:FormItem label="Name:">
					<s:TextInput prompt="optional" id="snapshotName"/>
				</s:FormItem>
				-->
				<s:FormItem label="Description:">
					<s:TextInput prompt="optional" id="description"/>
				</s:FormItem>
			</s:Form>
		</s:Group>

		<s:Line x="6" y="-18" width="100%" xFrom="5" xTo="150" yFrom="180" yTo="180">
			<s:stroke>
				<s:SolidColorStroke color="white"/>
			</s:stroke>
		</s:Line>
		<s:Group width="100%" height="27">
			<s:Button x="284" y="0" label="Cancel" click="PopUpManager.removePopUp(this)"/>
			<s:Button id="createButton" x="362" y="0" label="Create"
					  click="createButton_clickHandler(event)"/>
		</s:Group>
	</s:VGroup>

</s:TitleWindow>
