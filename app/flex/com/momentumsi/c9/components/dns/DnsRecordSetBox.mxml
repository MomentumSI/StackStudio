<?xml version="1.0" encoding="utf-8"?>
<c9:DetailsBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:c9="com.momentumsi.c9.components.*"
		  width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			[Bindable]
			private var _recordSetObject:Object = new Object();
			override public function set resourceObject(value:Object):void
			{
				_recordSetObject = value;
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<fx:XML id="dnsRecordSet"/>
	</fx:Declarations>
	
	<s:HGroup id="dnsRecordSetButtonBar" height="25" paddingLeft="10">

	</s:HGroup>
	<s:BorderContainer height="100%" width="100%" alpha="1" borderVisible="false">
		<c9:DetailsBoxTabNavigator id="dnsDetails">
			<s:NavigatorContent label="Details" width="100%" height="100%">
				<s:BorderContainer borderVisible="false"  id="details" height="100%" width="100%">
					<s:Scroller width="100%" height="100%">
						<s:viewport>
							<s:HGroup>
								<s:Form>
									<s:layout>
										<s:FormLayout gap="-7"/>
									</s:layout>
									<s:FormItem label="Hosted Zone Name:">
										<mx:Text text="{_recordSetObject.hosted_zone_name}"/>
									</s:FormItem>
									<s:FormItem label="Hosted Zone ID:">
										<mx:Text text="{_recordSetObject.hosted_zone_id}"/>
									</s:FormItem>
									<s:FormItem label="Record Name:">
										<mx:Text text="{_recordSetObject.record_name}"/>
									</s:FormItem>
									<s:FormItem label="Record Type:">
										<mx:Text text="{_recordSetObject.record_type}"/>
									</s:FormItem>
								</s:Form>
							</s:HGroup>
						</s:viewport>
					</s:Scroller>
				</s:BorderContainer>
			</s:NavigatorContent>
		</c9:DetailsBoxTabNavigator>
	</s:BorderContainer>
</c9:DetailsBox>
