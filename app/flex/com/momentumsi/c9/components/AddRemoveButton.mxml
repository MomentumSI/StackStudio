<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="68" height="26" gap="0">
	<fx:Metadata>
		[Event(name="addEvent", type="flash.events.Event")]
		[Event(name="removeEvent", type="flash.events.Event")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			protected function removeButton_clickHandler(event:MouseEvent):void
			{
				dispatchEvent(new Event("removeEvent"));
			}
			
			protected function addButton_clickHandler(event:MouseEvent):void
			{
				dispatchEvent(new Event("addEvent"));
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Button id="removeButton"
			  width="34" height="26" icon="com/momentumsi/c9/assets/remove.png"
			  skinClass="spark.skins.spark.ButtonSkin"
			  click="removeButton_clickHandler(event)"/>
	<s:Button id="addButton"
			  width="34" height="26" icon="com/momentumsi/c9/assets/plus.png"
			  skinClass="spark.skins.spark.ButtonSkin"
			  click="addButton_clickHandler(event)"/>
</s:HGroup>
