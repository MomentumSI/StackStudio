<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="850" height="450"
		 xmlns:cfn="com.momentumsi.c9.components.cfn.*"
		 title="Parameter Wizard"
		 close="PopUpManager.removePopUp(this)"
		 creationComplete="creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import com.momentumsi.c9.events.ElementSaveEvent;
			import com.momentumsi.c9.models.Project;
			import com.momentumsi.c9.models.ProjectVersion;
			
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			
			[Bindable]
			public var project:Project;
			[Bindable]
			public var projectVersion:ProjectVersion;
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				PopUpManager.centerPopUp(this);
			}
			
			protected function submitButton_clickHandler(event:MouseEvent):void
			{
				submitButton.enabled = false;
				submitButton.label = "Saving";
				
				var message:String = newParameterForm.save();
				if(message == "saved")
				{
					newParameterForm.addEventListener(ElementSaveEvent.RESULT, parameter_saveHandler);
				}else
				{
					Alert.show(message);
					submitButton.enabled = true;
					submitButton.label = "Save";
				}
			}
			
			private function parameter_saveHandler(event:ElementSaveEvent):void
			{
				newParameterForm.removeEventListener(ElementSaveEvent.RESULT, parameter_saveHandler);
				project.getProjectVersion(project.currentVersion.version);
				PopUpManager.removePopUp(this);
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:VGroup width="100%" height="90%">
		<cfn:CloudFormationNewParameter id="newParameterForm"
									 	projectVersion="{projectVersion}"/>	
	</s:VGroup>
	<s:Button id="submitButton" x="351" y="386" label="Save" click="submitButton_clickHandler(event)"/>
	<s:Button id="cancelButton" x="428" y="386" label="Cancel"
			  click="{PopUpManager.removePopUp(this)}"/>
</s:TitleWindow>
