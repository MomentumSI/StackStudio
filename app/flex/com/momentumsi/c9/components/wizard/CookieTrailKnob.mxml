<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  horizontalAlign="center">
	<fx:Script>
		<![CDATA[
			import com.momentumsi.c9.constants.ImagePath;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<mx:ViewStack id="wizardStack"/>
		<s:NavigatorContent id="currentPage"/>
	</fx:Declarations>
		<s:Image source="{ImagePath.TRAIL_KNOB}" 
				 width="16" height="16"
				 visible="{wizardStack.selectedChild == currentPage}"/>
		<mx:Text id="currentPageTitle"
				 fontWeight="bold"
				 disabledColor="white"
				 enabled="{wizardStack.selectedChild == currentPage}"/>
</s:VGroup>
