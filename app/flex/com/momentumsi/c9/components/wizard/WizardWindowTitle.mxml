<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="60" 
		 visible="{wizardStack.selectedIndex == 0}" 
		 includeInLayout="{wizardStack.selectedIndex == 0}">
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var resourceImage:String;
			
			public function set imageVisible(value:Boolean):void
			{
				windowImage.visible = value;
				windowImage.includeInLayout = value;
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<mx:ViewStack id="wizardStack"/>
		<fx:String id="resourceLabel"/>
	</fx:Declarations>
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="#FFFFFF"/>
		</s:fill>
	</s:Rect>
	<s:HGroup id="titleHG" width="100%" height="60"
			  verticalAlign="middle"
			  paddingTop="10" paddingBottom="10" paddingLeft="20"
			  gap="15">
		<s:Image id="windowImage"
				 source="{resourceImage}"/>		
		<s:Label text="{resourceLabel}" 
				 fontWeight="bold" 
				 fontSize="24"/>		
	</s:HGroup>
</s:Group>
