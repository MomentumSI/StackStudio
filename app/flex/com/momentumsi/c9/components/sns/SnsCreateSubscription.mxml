<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   width="566" height="256"
			   title="Create New Subscription"
			   close="PopUpManager.removePopUp(this)"
			   initialize="init(event)"
			   creationComplete="creationCompleteHandler(event)"
			   move="Helpers.doMove(this)">
	<fx:Script>
		<![CDATA[
			import com.momentumsi.c9.utils.Helpers;
			
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			protected function init(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				
			}
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				PopUpManager.centerPopUp(this);
			}
			
			protected function subscribe_clickHandler(event:MouseEvent):void
			{
				createSubscriptionSvc.send({endpoint: endpoint.text, protocol: protocol.selectedLabel});
			}
			
			protected function createSubscriptionSvc_resultHandler(event:ResultEvent):void
			{
				var result:XML = event.result as XML;
				subscriptionsCollection.addItem({subscriptionId: result.child('subscription-arn').toString(), endpoint: result.child('endpoint').toString(), protocol: result.child('protocol').toString()});
				PopUpManager.removePopUp(this);
			}
			
			protected function createSubscriptionSvc_faultHandler(event:FaultEvent):void
			{
				// TODO Auto-generated method stub
				
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<fx:XML id="topic"/>
		<s:ArrayCollection id="subscriptionsCollection"/>

		<s:HTTPService id="createSubscriptionSvc"
					   url="{Helpers.getHost()}/provisioned_sns_topics/create_new_subscription/{topic.child('id')}.xml"
					   method="GET"
					   resultFormat="e4x"
					   showBusyCursor="true"
					   result="createSubscriptionSvc_resultHandler(event)"
					   fault="createSubscriptionSvc_faultHandler(event)"/>
		
	</fx:Declarations>
	<s:VGroup height="100%" width="100%">
		<s:Form width="100%">
			<s:FormItem label="Topic Name">
				<mx:Text text="{topic.child('name')}"/>
			</s:FormItem>
			<s:FormItem label="Protocol">
				<mx:ComboBox id="protocol" selectedIndex="0">
					<mx:dataProvider>
						<s:ArrayCollection>
							<fx:Object label="Email"/>
							<!--<fx:Object label="Email (JSON)"/>-->
							<fx:Object label="HTTPS"/>
							<fx:Object label="HTTP"/>
							<!--<fx:Object label="SMS"/>
							<fx:Object label="Queue"/>-->
						</s:ArrayCollection>
					</mx:dataProvider>
				</mx:ComboBox>
			</s:FormItem>
			<s:FormItem label="Endpoint" width="100%">
				<s:TextInput prompt="e.g. user@domain.com" id="endpoint" width="100%"/>
			</s:FormItem>
		</s:Form>
		<s:HGroup paddingBottom="10" paddingRight="15" width="100%" horizontalAlign="right">
			<s:Button label="Subscribe" click="subscribe_clickHandler(event)"/>
			<s:Button label="Cancel" click="PopUpManager.removePopUp(this)"/>
		</s:HGroup>
	</s:VGroup>
</s:TitleWindow>
