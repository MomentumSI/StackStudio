<?xml version="1.0" encoding="utf-8"?>
<components:RdsActionWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
							xmlns:s="library://ns.adobe.com/flex/spark" 
							xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="com.momentumsi.c9.components.*"
							width="356" height="140" 
						    creationComplete="rdsactionwindow1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			
			protected function rdsactionwindow1_creationCompleteHandler(event:FlexEvent):void
			{
				actionButton.addEventListener(MouseEvent.CLICK, deleteSnapshot);
			}
			
			private function deleteSnapshot(event:MouseEvent):void
			{
				rdsService.deleteSnapshot();
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:VGroup height="100%" width="100%" 
			  paddingBottom="5"
			  paddingLeft="10"
			  paddingTop="10"
			  paddingRight="10">
		<s:Label text="Are you sure you want to delete {snapshot.id}?"
				 width="100%"/>
		<s:HGroup width="100%" height="100%" verticalAlign="bottom">
			<s:HGroup width="100%" horizontalAlign="left">
				<s:Button id="actionButton" 
						  label="Delete"
						  click="actionButton_clickHandler(event)"/>
			</s:HGroup>
			<s:HGroup horizontalAlign="right" width="100%">
				<s:Button id="cancelButton"
						  label="Cancel"
						  click="PopUpManager.removePopUp(this)"/>
			</s:HGroup>
			
		</s:HGroup>
	</s:VGroup>
</components:RdsActionWindow>
