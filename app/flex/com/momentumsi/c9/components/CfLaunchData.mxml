<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import com.momentumsi.c9.utils.Helpers;
			
			[Bindable]
			public var stackParameters:ArrayCollection = new ArrayCollection();

		]]>
	</fx:Script>
	<fx:Declarations>
		<s:DateTimeFormatter id="dateFormatter" dateTimePattern="MM/dd/yyyy hh:mm:ss a"/>
	</fx:Declarations>
	<s:VGroup height="100%" width="100%" paddingTop="10" paddingLeft="20" paddingRight="20">
		<s:Form width="100%" textAlign="right">
			<s:FormItem label="Launched By User:" width="100%">
				<mx:Text id="launchBy" textAlign="left"/>
			</s:FormItem>
			<s:FormItem label="Launch Time:" width="100%">
				<mx:Text id="launchTime" textAlign="left"/>
			</s:FormItem>
			<s:FormItem label="Inputs:" width="100%">
				<s:DataGrid id="parametersGrid" 
							fontSize="11" 
							width="100%"
							editable="false" 
							dataProvider="{stackParameters}"
							minHeight="0"
							textAlign="left">
					<s:columns>
						<s:ArrayList id="parametersGridColumns">
							<s:GridColumn headerText="Name" dataField="ParameterKey" />
							<s:GridColumn headerText="Value" dataField="ParameterValue"/>					
						</s:ArrayList>
					</s:columns>
				</s:DataGrid>
			</s:FormItem>
		</s:Form>
	</s:VGroup>
</s:Group>
