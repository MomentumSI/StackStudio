			override public function set data(value:Object):void
			{
				super.data = value;
				if(value.provision == true)
				{
					dataGridCheckBox.selected = true;
				}else{
					dataGridCheckBox.selected = false;
				}
			}

			
			protected function dataGridCheckBox_changeHandler(event:Event):void
			{
				if(dataGridCheckBox.selected)
				{
					super.data.provision = true;
				}else{
					super.data.provision = false;
				}
			}
			
		]]>
	</fx:Script>
	
	<!--<s:Label id="lblData" top="9" left="7"/> -->
	<s:CheckBox id="dataGridCheckBox" horizontalCenter="0" verticalCenter="0" change="dataGridCheckBox_changeHandler(event)"/>
</s:GridItemRenderer>
