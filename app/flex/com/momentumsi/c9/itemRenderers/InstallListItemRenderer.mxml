<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	<fx:Script>
		<![CDATA[			
			import com.momentumsi.c9.constants.ImagePath;
			
			override public function set data(value:Object):void
			{				
				if(value.hasOwnProperty('chef_type') || value.hasOwnProperty("chefType"))
				{
					icon.source = ImagePath.OPSCODE_ICON;					
				}else if(value.hasOwnProperty('puppet_type')){
					icon.source = ImagePath.PUPPET_ICON;
				}else{
					icon.visible = false;
				}
				itemLabel.text = value.name;

			}
		]]>
	</fx:Script>
	
	<s:HGroup verticalAlign="middle">		
		<s:Image id="icon"/>
		<s:Label id="itemLabel"/>
	</s:HGroup>
	
</s:ItemRenderer>
