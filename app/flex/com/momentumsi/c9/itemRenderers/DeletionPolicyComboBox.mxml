<?xml version="1.0" encoding="utf-8"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx"
					clipAndEnableScrolling="true" 
					width="100%">
	
	<fx:Script>
		<![CDATA[
			import mx.events.ListEvent;
			
			override public function set data(value:Object):void
			{
				if(value!=null)
				{
					super.data = value;
					if(value.deletePolicy == "Delete")
					{
						deleteOptions.selectedIndex = 0;
					}else if(value.deletePolicy == "Retain")
					{
						deleteOptions.selectedIndex = 1;
					}else if(value.deletePolicy == "Snapshot")
					{
						if(value.collection.length > 2)
						{
							deleteOptions.selectedIndex = 2;
						}
					}
				}
			}
			
			protected function deleteOptions_changeHandler(event:ListEvent):void
			{
				if(deleteOptions.selectedLabel == "Delete")
				{
					super.data.deletePolicy = "Delete";
				}else if(deleteOptions.selectedLabel == "Retain")
				{
					super.data.deletePolicy = "Retain";
				}else if(deleteOptions.selectedLabel == "Snapshot")
				{
					super.data.deletePolicy = "Snapshot";
				}
			}
			
		]]>
	</fx:Script>
	
	<mx:ComboBox id="deleteOptions" change="deleteOptions_changeHandler(event)" dataProvider="{data.collection}" width="100%"/>
</s:GridItemRenderer>
