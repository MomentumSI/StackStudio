<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer 
	name="EventsAndNewsItemRenderer"
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	autoDrawBackground="false" xmlns:utils="com.momentumsi.c9.utils.*">
	<!--
	<s:layout>
		<s:TileLayout/>
	</s:layout>
	-->
	<fx:Script>
		<![CDATA[
			import flash.net.navigateToURL;
			
			import mx.core.UIComponent;
			import mx.events.FlexEvent;
			
			protected function formatDate(s:String):String
			{
				return dateFormatter.format(s);	
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		
		<mx:DateFormatter id="dateFormatter" formatString="MMM DD YYYY"/>

	</fx:Declarations>

	<!-- txtPosted requires formatDate function to properly display date -->
	<s:HGroup verticalAlign="top">
		<mx:Text id="txtPosted" text="{formatDate(data.news_event.posted)}" width="90"/>
		<s:Label id="textLink"
				 text="{data.news_event.description}"
				 useHandCursor="true"
				 buttonMode="true"
				 mouseChildren="false"
				 showTruncationTip="true"
				 width="200"
				 maxDisplayedLines="3"
				 click="navigateToURL(new URLRequest(data.news_event.url))"
				 paddingTop="5"
				 color="blue"/>
	</s:HGroup>	
	
</s:ItemRenderer>
