<!DOCTYPE html>
<!--[if IEMobile 7 ]><html class="no-js iem7"><![endif]-->
<!--[if lt IE 9]><html class="no-js lte-ie8"><![endif]-->
<!--[if (gt IE 8)|(gt IEMobile 7)|!(IEMobile)|!(IE)]><!--><html class="no-js" lang="en"><!--<![endif]-->
<head>
    <meta charset="utf-8">
    <title>StackStudio</title>

    <%# <!-- http://t.co/dKP3o1e -->%>
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- link href="/favicon.png" rel="shortcut icon" / -->
    <link rel="stylesheet/less" type="text/css" href="css/main.less" />
    <link href="<%=root%>css/style.css" media="screen, projection" rel="stylesheet" type="text/css">
    <!-- link href="<%=root%>css/jquery-ui-1.8.17.custom.css" media="screen, projection" rel="stylesheet" type="text/css" -->
    <link rel="stylesheet" type="text/css"
         href="//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/themes/humanity/jquery-ui.css" media="screen, projection"/>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>
    <script src="js/vendor/less-1.3.1.min.js" type="text/javascript"></script>
    <script src="js/vendor/modernizr-2.6.2.min.js"></script>
    <link rel="stylesheet" type="text/css" href="css/jquery.terminal.css" />
    <script src="js/plugins.js"></script>
</head>

<body class="container">
    <!--  Header content -->
    <div class="row" style="margin-top: 10px;text-align:left">
      <a href="/"><img src="/images/TranscendLogos/StackStudioLogo_SML.png" height="40" width="160" alt="StackStudio"/></a>
    </div>
    <div class="row">
        <div>
            <%= erb :nav%>
        </div>
    </div>
    <div style="clear:both"></div>

    <!-- Main content -->
    <section id="main" class="row">
        <% if @custom_page_title %>
            <%=@custom_page_title%>
        <% else %>
            <h1 id="entry_title"><%=@page_title%></h1>
            <% if @page_subtitle %>
                <h3 id="entry_subtitle"><%=@page_subtitle%></h3>
            <% end %>
        <% end %>

        <div>
            <%= yield %>
        </div>
    </section>

    <footer class="row">
        <p>
            Copyright &copy; 2012 - <a href="http://www.transcendcomputing.com">Transcend Computing</a>
        </p>
    </footer>
    <section id="console_area">
    <div id="command_area">
    <div id="cloud_console"></div>
    <div id="cloud_cmd"></div>
    </div>
    <div id="console_controls"><button id="con_options">Options</button>
    <ul id="con_menu">
            <li><a href="#">Clear</a></li>
            <li>
                <a href="#">Send Commands To...</a>
                <ul>
                    <li><a class="export_to" href="#">Cloud Formation Template</a></li>
                    <li><a class="export_to" href="#">Ruby Cloud Template</a></li>
                    <li><a class="export_to" href="#">Java Cloud Template</a></li>
                </ul>
            </li>
    </ul>
    <button id="con_expand">Expand</button></div>
    </section>
    <% if @custom_js_app %>
    <script data-main="js/<%=@custom_js_app%>" src="js/vendor/require-2.1.2.js"></script>
    <% else %>
    <script data-main="js/common" src="js/vendor/require-2.1.2.js"></script>
    <% end %>

    <script type="text/html" id="alert">
        <div class="{{ type }} message">
        <h3>{{ title }}</h3>
        <p>{{ message }}</p>
        </div>
    </script>
</body>
</html>
